<% able_to? :publish_content do -%>
  <% if @block.respond_to?(:published?) && !@block.published %>
    <%= link_to span_tag('Publish'), block_path(:publish),
      :class => "http_put button",
      :id => "publish_button" %>
  <% else %>
    <%= link_to span_tag(t 'browsercms.publish'), "#",
      :class => "http_put button disabled left",
      :id => "publish_button" %>
  <% end %>
<% end -%>

<%= link_to span_tag(t 'browsercms.view_content'), block_path,
  :class => "button#{ ' off' if action_name == 'show'} middle",
  :id => "view_button" %>

<%= link_to span_tag(t 'browsercms.edit_content'), block_path(:edit),
  :class => "button#{ ' off' if action_name == 'edit'}",
  :id => "edit_button" %>

<%= link_to span_tag(t 'browsercms.add_new_content'), new_block_path,
  :class => "button#{ ' off' if action_name == 'new'} right",
  :id => "add_button" %>

<% if @block.class.versioned? %>
  <%= link_to span_tag(t 'browsercms.list_versions'), block_path(:versions),
    :class => "button#{ ' off' if action_name == 'revisions'}",
    :id => "list_versions" %>
<% else %>
  <%= link_to span_tag(t 'browsercms.list_versions'), '#',
    :class => "button disabled",
    :id => "list_versions" %>
<% end %>

<%= link_to span_tag("<span class=\"delete_img\">&nbsp;</span>"+t('browsercms.delete')), block_path,
  :class => "http_delete confirm_with_title button",
  :title => t('browsercms.delete_block_question', :name => @block.name),
  :id => "delete_button" %>
