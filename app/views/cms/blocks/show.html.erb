<% @page_title = t('browsercms.content_library')+" / View #{content_type.display_name}" %>
<% @toolbar_title = "View #{content_type.display_name} '#{ @block.name }'" %>
<% content_for :html_head do %>
<%= stylesheet_link_tag('cms/form_layout') %>
<%= stylesheet_link_tag('cms/block') %>
<%= stylesheet_link_tag('cms/content_library') %>
<style type="text/css">
.content img {
max-width: 785px;
}
</style>
<% end %>
<%= content_for :functions,  render(:partial => 'cms/blocks/toolbar') %>

<div id="block_content">
<% if @block.class.publishable? %>
<% block_published_status = (@block.published? ? 'published' : 'draft') %>
  <div class="status"><div class="header"><%= t'browsercms.status' %>:</div> <%= status_icon(block_published_status) %> <div class="block_published_status"><%= block_published_status %></div></div>
<% end %>
  <% if @block.class.connectable? %>
  <div class="nv_pair"><div class="header"><%= t 'browsercms.used_on' %>:</div> <div><%= link_to_usages(@block) %> <%= "page".pluralize(@block.connected_pages.count)%></div></div>
  <% end -%>
  <% if @block.respond_to?(:version) && !@block.current_version? %>
  <div class="nv_pair"><div class="header"><%= t 'browsercms.version' %>:</div><div> v. <%= @block.version %> ( <%= link_to "Current", [:cms, @block] %> )</div>
  <% end -%>
  <% if @block.class.renderable? %>
    <div class="header"><%= t 'browsercms.block_contents' %>:</div>
    <div class="content"><%= render_connectable(@block) %></div>
  <% end %>
</div>
